{
  "name": "izay21.dev-mcp-remote-proxy",
  "version": "1.3.4",
  "description": "Expose MCP servers over TCP or WebSocket",
  "bin": {
    "mcp-remote": "bin/mcp-remote.js"
  },
  "type": "module",
  "main": "bin/mcp-remote.js",
  "scripts": {
    "build": "tsc",
    "start": "node bin/mcp-remote.js",
    "test": "jest --config=jest.config.cjs",
    "test:watch": "jest --config=jest.config.cjs --watch",
    "test:coverage": "jest --config=jest.config.cjs --coverage",
    "test:unit": "jest --config=jest.config.cjs --testPathIgnorePatterns='integration.test.ts'",
    "test:integration": "jest --config=jest.config.cjs --testPathPatterns=integration.test.ts --testTimeout=60000",
    "test:integration:docker": "npm run build && docker compose -f filesystem-mcp/docker-compose.yml build && npm run test:integration",
    "docker:up": "docker compose -f filesystem-mcp/docker-compose.yml up -d",
    "docker:down": "docker compose -f filesystem-mcp/docker-compose.yml down",
    "pretest": "npm run build",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "mcp",
    "proxy",
    "tcp",
    "websocket",
    "remote",
    "cli"
  ],
  "author": "izay21.dev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/izay21-dev/mcp-remote-proxy.git"
  },
  "files": [
    "bin/",
    "README.md",
    "permissions.json"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "izay21.dev-mcp-remote-proxy": "^1.1.0",
    "jsonwebtoken": "^9.0.2",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@modelcontextprotocol/server-filesystem": "^2025.7.29",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.0",
    "@types/ws": "^8.18.1",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
